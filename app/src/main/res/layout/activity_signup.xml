<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignupActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/logo"
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/connetion_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CrÃ©er un compte"
                android:fontFamily="@font/poppins_bold"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:id="@+id/create_title"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/create_title"
                app:layout_constraintStart_toStartOf="parent"
                android:textAlignment="textStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veuillez remplir vos informations"
                android:fontFamily="@font/roboto_regular"
                android:textSize="18sp"
                android:textColor="@color/grey1"
                android:id="@+id/cnx_subtitle"
                />
            <TextView
                android:id="@+id/fullname_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom complet"
                app:layout_constraintTop_toBottomOf="@+id/cnx_subtitle"
                android:textColor="@color/grey2"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fullname_title"
                android:id="@+id/fullname_edittext_container"
                android:background="@drawable/edit_text_background"
                android:gravity="center_vertical"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"
                android:paddingVertical="5dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:id="@+id/fullname_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/user"
                    android:tint="@color/grey5"
                    />
                <EditText
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/fullname_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/fullname_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ex: Karim Laouchedi"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="text"
                    android:textColorHint="@color/grey4"
                    android:background="@android:color/transparent"

                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/email_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse Email"
                app:layout_constraintTop_toBottomOf="@+id/fullname_edittext_container"
                android:textColor="@color/grey2"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_title"
                android:id="@+id/email_edittext_container"
                android:background="@drawable/edit_text_background"
                android:gravity="center_vertical"
                android:paddingRight="50dp"
                android:paddingLeft="20dp"
                android:paddingVertical="5dp"
                >

                <ImageView
                    android:id="@+id/email_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/envelope" />
                <EditText

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/email_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/email_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Ex:  jk_laouchedi@esi.dz"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="textEmailAddress"
                    android:textColorHint="@color/grey4"
                    android:background="@android:color/transparent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/psw_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse Email"
                app:layout_constraintTop_toBottomOf="@+id/email_edittext_container"
                android:textColor="@color/grey2"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/psw_title"
                android:id="@+id/psw_edittext_container"
                android:background="@drawable/edit_text_background"
                android:gravity="center_vertical"
                android:paddingRight="50dp"
                android:paddingLeft="20dp"
                android:paddingVertical="5dp"
                >

                <ImageView
                    android:id="@+id/psw_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/padlock" />
                <EditText

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/psw_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/psw_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="mot de passe"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="textPassword"
                    android:textColorHint="@color/grey4"
                    android:background="@android:color/transparent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/eye_icon"
                app:layout_constraintTop_toTopOf="@+id/psw_edittext_container"
                app:layout_constraintBottom_toBottomOf="@+id/psw_edittext_container"
                app:layout_constraintEnd_toEndOf="@id/psw_edittext_container"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view"
                android:tint="@color/grey1"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/confirm_psw_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse Email"
                app:layout_constraintTop_toBottomOf="@+id/psw_edittext_container"
                android:textColor="@color/grey2"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/confirm_psw_title"
                android:id="@+id/confirm_psw_edittext_container"
                android:background="@drawable/edit_text_background"
                android:gravity="center_vertical"
                android:paddingRight="50dp"
                android:paddingLeft="20dp"
                android:paddingVertical="5dp"
                >

                <ImageView
                    android:id="@+id/confirm_psw_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/padlock" />
                <EditText

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/confirm_psw_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/confirm_psw_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="confirmer votre mot de passe"
                    android:layout_marginLeft="10dp"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:inputType="textPassword"
                    android:textColorHint="@color/grey4"
                    android:background="@android:color/transparent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/confirm_eye_icon"
                app:layout_constraintTop_toTopOf="@+id/confirm_psw_edittext_container"
                app:layout_constraintBottom_toBottomOf="@+id/confirm_psw_edittext_container"
                app:layout_constraintEnd_toEndOf="@id/confirm_psw_edittext_container"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/view"
                android:tint="@color/grey1"
                android:layout_marginRight="20dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/commencer_btn"
            style="@style/Theme.AppCompat.NoActionBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:background="@drawable/buttons_background"
            android:elevation="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="commencer"
            android:textSize="14sp"
            app:elevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/connetion_container"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/commencer_btn"
            android:id="@+id/create_account_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous  avez deja un compte ? "
                android:textColor="@color/grey2"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="20dp"
                />
            <TextView
                android:id="@+id/signin_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/se_connecter"
                android:textColor="@color/green"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>