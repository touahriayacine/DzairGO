<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="15dp"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/wilaya_container"
            android:background="@drawable/tag_background"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            >

            <TextView
                android:id="@+id/wilaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Tlemcen"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="8sp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Festival de la musique symphonique"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/wilaya_container"
            android:id="@+id/article_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:lineHeight="20dp"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/article_title"
            android:id="@+id/time_passed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="il y a 16 minutes"
            android:fontFamily="@font/roboto_regular"
            android:textSize="8dp"
            android:textColor="@color/grey1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/article_title"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <TextView
                android:id="@+id/nb_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/grey1"
                android:textSize="8sp"
                android:layout_marginRight="5dp"
                />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/chat"
                    />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="68dp"
        android:layout_height="82dp"
        >

        <ImageView
            android:id="@+id/image_article"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/violon" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>