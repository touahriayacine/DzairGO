<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/logo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="LOGO"
      android:layout_marginTop="50dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/robotoregular"
        android:textSize="40sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/connetion_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@+id/connecter_btn"
        >
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connexion"
            android:fontFamily="@font/poppinsbold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:id="@+id/cnx_title"
            />
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/cnx_title"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrez vos informations dâ€™inscription"
            android:fontFamily="@font/robotoregular"
            android:textSize="18sp"
            android:textColor="@color/grey1"
            android:id="@+id/cnx_subtitle"
            />
            <TextView
                android:id="@+id/email_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse Email"
                app:layout_constraintTop_toBottomOf="@+id/cnx_subtitle"
                android:textColor="@color/grey2"
                android:fontFamily="@font/robotomedium"
                android:textSize="14sp"
                />
        <EditText
            android:id="@+id/email_edittext"
            android:drawableStart="@drawable/envelope"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/email_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Ex: jk_laouchedi@esi.dz"
            android:textColorHint="@color/grey4"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            />
        <TextView
            android:id="@+id/psw_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mot de passe"
            app:layout_constraintTop_toBottomOf="@+id/email_edittext"
            android:textColor="@color/grey2"
            android:fontFamily="@font/robotomedium"
            android:textSize="14sp"
            />
        <EditText
            android:id="@+id/psw_edittext"
            android:drawableStart="@drawable/padlock"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/psw_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  * * * * * * * *"
            android:textColorHint="@color/grey4"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_background"
            />
        <TextView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/psw_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/miss_psw"
            android:text="Mot de passe oublie ?"
            android:textColor="@color/green"
            android:layout_marginTop="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/connecter_btn"
        app:layout_constraintBottom_toTopOf="@+id/create_account_link"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Theme.AppCompat.NoActionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connecter"
        android:textSize="14sp"
        android:fontFamily="@font/poppinssemibold"
        android:background="@drawable/buttons_background"
        android:layout_marginBottom="50dp"
        app:elevation="0dp"
        android:elevation="0dp"
        />
        <LinearLayout
            android:id="@+id/create_account_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous n'avez pas de compte ? "
                android:textColor="@color/grey2"
                android:textSize="15sp"
                android:fontFamily="@font/robotoregular"
                android:layout_marginBottom="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/s_inscrire"
                android:textColor="@color/green"
                android:fontFamily="@font/robotomedium"
                android:textSize="16sp"
                android:fontFeatureSettings=""
                />
        </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>