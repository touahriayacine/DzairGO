<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LireArticleActivity"
    android:scrollbarSize="0dp"
    android:overScrollMode="never"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:src="@drawable/violon"
            android:scaleType="centerCrop"
           app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_article"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/white_gradient"
            android:paddingHorizontal="15dp"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="65dp"
                android:layout_height="19dp"
                android:background="@drawable/tag_background"
                android:backgroundTint="@color/green"
                app:layout_constraintBottom_toTopOf="@+id/article_big_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:id="@+id/wilaya_tag"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center"
                    android:text="ALGER"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:id="@+id/article_big_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Festival de la musique symphonique"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginRight="40dp"
                />
            <ImageView
                android:id="@+id/add_faviorite_btn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/article_big_title"
                android:src="@drawable/heart_2"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/header_article"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:id="@+id/extra_info_container"
                >
                <TextView
                    android:id="@+id/time_passed_reading_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="il y a 3 heures"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/grey1"
                    android:textSize="8dp"
                    />
                <TextView
                    android:id="@+id/nb_comments_reading_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:textColor="@color/grey1"
                    android:text="45"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/time_passed_reading_article"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_regular"
                    />
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/nb_comments_reading_article"
                    android:src="@drawable/chat"
                    android:layout_marginLeft="5dp"
                    android:scaleType="centerCrop"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/extra_info_container"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:overScrollMode="never"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="40dp"
                android:id="@+id/comments_list"
                app:layout_constraintTop_toBottomOf="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="30dp"
                android:paddingBottom="30dp"
                app:layout_constraintTop_toBottomOf="@id/comments_list"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_container"
                >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/person"
                android:id="@+id/my_avatar_comment"
                />
                <TextView
                    app:layout_constraintTop_toTopOf="@+id/my_avatar_comment"
                    app:layout_constraintBottom_toBottomOf="@id/my_avatar_comment"
                    app:layout_constraintStart_toEndOf="@id/my_avatar_comment"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="ajouter un commentaire"
                    android:textColor="@color/grey2"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/my_avatar_comment"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/comment_background"
                    android:padding="10dp"
                    android:layout_marginTop="5dp"
                    android:paddingEnd="80dp"
                    android:minHeight="60dp"
                    >
                    <EditText
                        android:id="@+id/comment_edit_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Laissez un commentaire"
                        android:textColorHint="@color/grey1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/grey2"
                        android:textSize="16sp"
                        android:fontFamily="@font/roboto_regular"
                        android:background="@color/white"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/comment_container"
                    app:layout_constraintEnd_toEndOf="@+id/comment_container"
                    android:id="@+id/publier_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/publier_background"
                    android:padding="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="publier"
                        android:textColor="@color/white"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="10dp"
                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>